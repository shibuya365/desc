<div id="footer-menu" class="btn-group btn-group-justified">
  <%= link_to "Home", root_path, class: "btn btn-primary" %>
  <a href="#" class="btn btn-primary">👥Every</a>
  <a href="#" class="btn btn-primary">👤You</a>

  <div class="btn-group dropup">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      ⚙️Account<span class="caret"></span>
    </button>
    <div class="dropdown-menu dropdown-menu-right" role="menu">
      <% if logged_in? %>
        <%= link_to "Settings", edit_user_path(current_user), class: "btn btn-info" %>
        <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-info" %>
      <% else %>
        <%= link_to "Log in", login_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>








