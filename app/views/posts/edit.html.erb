<% provide(:title, "Edit post") %>

<div class="row">
  <aside class="col">
    <section class="post_info">
      <%= markdown(@post.content).html_safe %>
    </section>
    <section class="post_form">
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object  %>
        <div class="field">
          <%= f.text_area :content %>
        </div>
        <%= f.submit "Post", class: "btn-float btn btn-primary" %>
      <% end %>
    </section>
  </aside>
</div>

<%= link_to "⬅️", session[:forwarding_url] || root_url, class: "btn-return btn btn-primary" %>
